<div class="container">
  <h1>Add a Restaurant</h1>


  <%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :category, :hint => 'Choose between chinese, italian, japanese, french or belgian' %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit "Add restaurant", class: "btn btn-secondary" %>
  <% end %>

</div>
